<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Keranjang1">

    <View
        android:id="@+id/view3"
        android:layout_width="412dp"
        android:layout_height="60dp"
        android:background="@color/primaryColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="22dp">


            <ImageButton
                android:onClick="back"
                android:id="@+id/imageButton5"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginTop="4dp"
                android:background="@color/primaryColor"
                app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:text="Keranjang"
                android:textSize="30sp"
                android:textStyle="normal" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="100dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="225dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/iphone" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iphone Pro Max 1 TB"
                android:layout_marginLeft="200dp"
                android:textSize="20sp"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:text="IDR 22.000.000"
                android:layout_marginTop="27dp"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView29"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_marginLeft="205dp"
                android:layout_marginTop="72dp"
                app:srcCompat="@drawable/plus" />

            <ImageView
                android:id="@+id/imageView31"
                android:layout_width="21dp"
                android:layout_height="19dp"
                android:layout_marginLeft="313dp"
                android:layout_marginTop="70dp"
                app:srcCompat="@drawable/min" />

            <TextView
                android:id="@+id/textView42"
                android:layout_width="20dp"
                android:layout_height="44dp"
                android:text="1"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="58dp"
                android:textSize="34sp"
                android:textStyle="bold"/>


        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="40dp">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp.22.000.000"
                android:textSize="30sp"
                android:layout_marginLeft="140dp"
                android:textStyle="bold"/>

        </FrameLayout>

        <Button
            android:onClick="krj"
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/view3"
            android:backgroundTint="@color/primaryColor"
            android:text="Check Out"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:cornerRadius="10dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>