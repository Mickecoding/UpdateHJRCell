<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:backgroundTint="@color/background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">

        <ImageButton
            android:onClick="back"
            android:id="@+id/imageButton5"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

        <ImageView
            android:id="@+id/R_img_2"
            android:layout_width="123dp"
            android:layout_height="126dp"
            android:layout_below="@+id/R_img_1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/R_img_3"
            android:layout_width="182dp"
            android:layout_height="201dp"
            android:layout_below="@+id/R_img_2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="-63dp"
            android:src="@drawable/kata1" />

        <ImageView
            android:id="@+id/R_img_4"
            android:layout_width="213dp"
            android:layout_height="202dp"
            android:layout_below="@+id/R_img_3"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="-169dp"
            android:src="@drawable/kata2" />

        <EditText
            android:id="@+id/edit_fullname"
            android:layout_width="350dp"
            android:layout_height="57dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/abu"
            android:hint="Name"
            android:paddingLeft="10dp" />


        <EditText
            android:id="@+id/edit_email"
            android:layout_width="350dp"
            android:layout_height="57dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/abu"
            android:hint="Email ID"
            android:paddingLeft="10dp" />

        <EditText
            android:id="@+id/editTextTextPassword2"
            android:layout_width="350dp"
            android:layout_height="57dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:backgroundTint="@color/abu"
            android:hint="Password"
            android:ems="10"
            android:paddingLeft="10dp"
            android:inputType="textPassword" />

        <Button
            android:onClick="registrasi"
            android:layout_width="192dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp"
            android:layout_below="@+id/ly_1"
            android:layout_centerHorizontal="true"
            android:width="300dp"
            android:background="@drawable/button_shape"
            android:text="Registrasi"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:font="@font/robotoslabbold"
            android:id="@+id/button_register" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
