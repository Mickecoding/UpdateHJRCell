<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">

        <ImageButton
            android:onClick="back"
            android:id="@+id/imageButton5"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

        <ImageView
            android:id="@+id/R_img_2"
            android:layout_width="123dp"
            android:layout_height="126dp"
            android:layout_marginLeft="120dp"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/img_3"
            android:layout_width="182dp"
            android:layout_height="201dp"
            android:layout_below="@+id/img_2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="-63dp"
            android:src="@drawable/kata1" />

        <ImageView
            android:id="@+id/img_4"
            android:layout_width="213dp"
            android:layout_height="202dp"
            android:layout_below="@+id/img_3"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="-169dp"
            android:src="@drawable/kata2" />

        <EditText
            android:id="@+id/editTextTextEmailAddress"
            android:layout_width="350dp"
            android:layout_height="57dp"
            android:layout_marginLeft="15dp"
            android:hint="Email"
            android:paddingLeft="10dp"
            android:background="@color/abu"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="350dp"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="@color/abu"
            android:ems="10"
            android:hint="Password"
            android:paddingLeft="10dp"
            android:inputType="textPassword"/>

        <Button
            android:onClick="masuk"
            android:id="@+id/button_masuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonlogin"
            android:text="Masuk"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="491dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum Memiliki Akun?"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="10dp"
            tools:layout_editor_absoluteX="171dp"
            tools:layout_editor_absoluteY="565dp" />

        <TextView
            android:onClick="daftar"
            android:id="@+id/btn_daftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="-19dp"
            android:text="Daftar"
            tools:layout_editor_absoluteX="171dp"
            tools:layout_editor_absoluteY="565dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>